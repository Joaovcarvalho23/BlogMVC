@model Blog.Web.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Adicionar nova Tag - Funcionalidade de Admin</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Nome de Exibição</label>
            <input type="text" class="form-control" id="exibicaoNome" asp-for="ExibicaoNome" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submeter</button>
        </div>
    </form>
</div>